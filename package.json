{
	"name": "workspace",
	"version": "1.0.0",
	"main": "entry.ts",
	"license": "MIT",
	"workspaces": [
		"modules/*"
	],
	"private": "true",
	"scripts": {
		"dev": "NODE_ENV=development webpack serve --config webpack.config.cjs",
		"start": "NODE_ENV=production webpack serve --config webpack.config.cjs",
